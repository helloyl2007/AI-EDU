<script setup>
import { useUserStore } from '../stores/user'
import { useRouter, useRoute } from 'vue-router'
import { House, User, Document, VideoPlay, Edit, Calendar, ArrowRight, ArrowLeft, Close, Promotion, SwitchFilled } from '@element-plus/icons-vue'
import { ref, computed, nextTick } from 'vue'
import config from '../config/config'
import DOMPurify from 'dompurify'
import { marked } from 'marked'
import katex from 'katex'
import 'katex/dist/katex.min.css'

const userStore = useUserStore()
const router = useRouter()
const route = useRoute()

// èŠå¤©ç›¸å…³çš„å“åº”å¼æ•°æ®
const chatInput = ref('')
const chatMessages = ref([])
const isTyping = ref(false)
const typingText = ref('')
const messagesContainer = ref(null)
const messagesEnd = ref(null)
const isChatActive = ref(false)
// é¦–é¡µæœªæ¿€æ´»æ—¶çš„å»ºè®®è¯æœ¯
const suggestedPrompts = ref([
  'å¸®æˆ‘æ€»ç»“ä¸ƒå¹´çº§ä¸Šå†Œç¬¬ä¸‰ç« è¦ç‚¹ï¼Œå¹¶ç»™å‡º3ä¸ªè¯¾å ‚ç»ƒä¹ ',
  'æŠŠè¿™ä»½PPTçš„æ ¸å¿ƒçŸ¥è¯†ç‚¹æç‚¼æˆè¯¾å ‚å·©å›ºæçº²',
  'æ ¹æ®äºŒæ¬¡å‡½æ•°æ•™å­¦ç›®æ ‡ï¼Œç”Ÿæˆä¸€ä»½10åˆ†é’Ÿçš„è¯¾å ‚å°æµ‹',
  'ç»™å‡ºâ€œç”µç£æ„Ÿåº”â€ä¸€è¯¾çš„æ•™å­¦é‡éš¾ç‚¹ä¸è®²è§£æ€è·¯',
])

function focusChatInput() {
  // æ¿€æ´»èŠå¤©åŒºåŸŸï¼Œå¹¶åœ¨ä¸‹ä¸€å¸§æ»šåŠ¨åˆ°è¾“å…¥åŒº
  isChatActive.value = true
  nextTick(() => {
    const el = document.querySelector('.in-chat-input textarea')
    if (el) el.focus()
  })
}

function usePrompt(text) {
  isChatActive.value = true
  chatInput.value = text
  nextTick(() => {
    const el = document.querySelector('.in-chat-input textarea')
    if (el) el.focus()
  })
}

// æŒä¹…åŒ–å¤šè½®ä¼šè¯IDï¼ˆç”¨äºåç«¯é€ä¼ åˆ°ç™¾ç»ƒä¼šè¯ï¼‰
const sessionId = ref('')
function initSessionId() {
  try {
    const key = 'chat_session_id'
    const exist = localStorage.getItem(key)
    if (exist) {
      sessionId.value = exist
      return
    }
    const gen = (typeof crypto !== 'undefined' && crypto.randomUUID)
      ? crypto.randomUUID()
      : `${Date.now().toString(36)}-${Math.random().toString(36).slice(2,10)}`
    sessionId.value = gen
    localStorage.setItem(key, gen)
  } catch {
    // å…œåº•ï¼šæ— æ³•ä½¿ç”¨ localStorage æ—¶ä»ç”Ÿæˆä¸€æ¬¡æ€§ä¼šè¯ID
    sessionId.value = `${Date.now().toString(36)}-${Math.random().toString(36).slice(2,10)}`
  }
}
initSessionId()

// åˆ¤æ–­æ˜¯å¦åœ¨é¦–é¡µ
const isHome = computed(() => {
  return route.path === '/aiedu'
})

// ä¿®æ”¹è®¡ç®—å±æ€§ï¼Œç¡®ä¿åŒæ—¶å¤„ç†æ™ºèƒ½è¯¾ä»¶å’Œè§†é¢‘è¯¾ä»¶çš„è·¯å¾„æ˜ å°„
const currentPath = computed(() => {
  // å¤„ç†è§†é¢‘ç¼–è¾‘é¡µé¢ï¼Œæ˜ å°„åˆ°è§†é¢‘è¯¾ä»¶èœå•
  if (route.path.includes('/aiedu/ppt-to-video/edit/')) {
    return '/aiedu/ppt-to-video'
  }
  
  // è§†é¢‘åˆ›å»ºé¡µé¢æ˜ å°„åˆ°è§†é¢‘è¯¾ä»¶èœå•
  if (route.path === '/aiedu/ppt-to-video/create') {
    return '/aiedu/ppt-to-video'
  }
  
  // æ™ºèƒ½è¯¾ä»¶åˆ›å»ºé¡µé¢æ˜ å°„åˆ°æ™ºèƒ½è¯¾ä»¶èœå•
  if (route.path === '/aiedu/generate-ppt/create') {
    return '/aiedu/generate-ppt'
  }
  
  // å…¶ä»–æƒ…å†µä¿æŒåŸæ ·ï¼Œä¸è¿›è¡Œè·¯å¾„æ˜ å°„
  return route.path
})

async function handleLogout() {
  try {
    await userStore.logout()
    router.push('/login')
  } catch (error) {
    console.error('é€€å‡ºå¤±è´¥:', error)
    // å³ä½¿å¤±è´¥ä¹Ÿå°è¯•è·³è½¬åˆ°ç™»å½•é¡µ
    router.push('/login')
  }
}

// èŠå¤©ç›¸å…³æ–¹æ³•
async function sendMessage() {
  if (!chatInput.value.trim()) return
  
  const userMessage = chatInput.value.trim()
  chatInput.value = ''
  // å‘é€æ—¶æ¿€æ´»èŠå¤©åŒºåŸŸ
  isChatActive.value = true
  
  // æ·»åŠ ç”¨æˆ·æ¶ˆæ¯åˆ°èŠå¤©è®°å½•
  chatMessages.value.push({
    role: 'user',
    content: userMessage
  })
  
  // æ»šåŠ¨åˆ°åº•éƒ¨
  await nextTick()
  scrollToBottom()
  
  // å¼€å§‹æ‰“å­—æ•ˆæœ
  isTyping.value = true
  typingText.value = ''
  
  try {
    // å‘é€èŠå¤©è¯·æ±‚
    const response = await fetch(`${config.apiBaseURL}/api/chat/send`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${userStore.token}`
      },
      body: JSON.stringify({
        message: userMessage,
        history: chatMessages.value.slice(0, -1), // æ’é™¤åˆšæ·»åŠ çš„ç”¨æˆ·æ¶ˆæ¯
        stream: true,
        session_id: sessionId.value
      })
    })
    
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`)
    }
    
    const reader = response.body.getReader()
    const decoder = new TextDecoder()
    let assistantMessage = ''
    
    while (true) {
      const { done, value } = await reader.read()
      if (done) break
      
      const chunk = decoder.decode(value)
      const lines = chunk.split('\n')
      
      for (const line of lines) {
        if (line.startsWith('data: ')) {
          try {
            const data = JSON.parse(line.substring(6))
            if (data.error) {
              throw new Error(data.error)
            }
            if (data.content) {
              assistantMessage += data.content
              typingText.value = assistantMessage
              await nextTick()
              scrollToBottom()
            }
            if (data.finished) {
              isTyping.value = false
              chatMessages.value.push({
                role: 'assistant',
                content: assistantMessage
              })
              await nextTick()
              scrollToBottom()
              break
            }
          } catch (e) {
            console.error('è§£æSSEæ•°æ®å¤±è´¥:', e)
          }
        }
      }
    }
    
  } catch (error) {
    console.error('èŠå¤©è¯·æ±‚å¤±è´¥:', error)
    isTyping.value = false
    chatMessages.value.push({
      role: 'assistant',
      content: 'æŠ±æ­‰ï¼Œç”±äºç½‘ç»œé—®é¢˜ï¼Œæˆ‘ç°åœ¨æ— æ³•å›ç­”æ‚¨çš„é—®é¢˜ï¼Œè¯·ç¨åå†è¯•ã€‚'
    })
    await nextTick()
    scrollToBottom()
  }
}

function scrollToBottom() {
  // ä¼˜å…ˆä½¿ç”¨åº•éƒ¨é”šç‚¹ï¼Œè®©å¤–å±‚ä¸»æ»šåŠ¨å®¹å™¨æ»šåŠ¨åˆ°åº•éƒ¨
  if (messagesEnd.value && typeof messagesEnd.value.scrollIntoView === 'function') {
    messagesEnd.value.scrollIntoView({ behavior: 'auto', block: 'end' })
    return
  }
  // å…œåº•ï¼šå¦‚æœé”šç‚¹ä¸å¯ç”¨ï¼Œå°è¯•ä½¿ç”¨æ—§çš„å®¹å™¨æ»šåŠ¨
  if (messagesContainer.value) {
    messagesContainer.value.scrollTop = messagesContainer.value.scrollHeight
  }
}

function handleBack() {
  // è¿”å›åˆ°åŠŸèƒ½å…¥å£è§†å›¾ï¼ˆä¿ç•™å†å²æ¶ˆæ¯ï¼Œä½†ä¸æ˜¾ç¤ºèŠå¤©åŒºï¼‰
  isChatActive.value = false
}

function renderMarkdown(content) {
  if (!content) return ''
  try {
    let processed = content
    processed = processed.replace(/\$([^$\n]+?)\$/g, (m, f) => {
      try { return katex.renderToString(f, { throwOnError: false, displayMode: false }) } catch { return m }
    })
    processed = processed.replace(/\$\$([\s\S]+?)\$\$/g, (m, f) => {
      try { return katex.renderToString(f, { throwOnError: false, displayMode: true }) } catch { return m }
    })
    return DOMPurify.sanitize(marked(processed))
  } catch {
    return DOMPurify.sanitize(marked(content))
  }
}
